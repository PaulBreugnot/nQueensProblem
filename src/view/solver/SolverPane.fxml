<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root minHeight="0.0" minWidth="0.0" type="BorderPane" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.solver.SolverPaneController">
	<top>
		<HBox alignment="CENTER" BorderPane.alignment="CENTER">
			<children>
				<VBox>
					<children>
						<Label text="Number Of Queens :" />
						<Spinner fx:id="sizeSpinner" editable="true" />
					</children>
					<HBox.margin>
						<Insets bottom="10.0" left="10.0" top="5.0" />
					</HBox.margin>
				</VBox>
				<VBox>
					<children>
						<Label text="Solver :" />
						<ComboBox fx:id="solverComboBox" prefWidth="150.0" />
					</children>
					<HBox.margin>
						<Insets bottom="10.0" left="10.0" top="5.0" />
					</HBox.margin>
				</VBox>
			</children>
		</HBox>
	</top>
	<bottom>
		<HBox alignment="CENTER" BorderPane.alignment="CENTER">
			<children>
				<Button mnemonicParsing="false" onAction="#handleRandomInit" prefWidth="94.0" text="Random Init">
					<HBox.margin>
						<Insets bottom="5.0" right="10.0" top="10.0" />
					</HBox.margin>
				</Button>
				<Button mnemonicParsing="false" onAction="#handleSolve" prefWidth="94.0" text="Solve">
					<HBox.margin>
						<Insets bottom="5.0" left="10.0" top="10.0" />
					</HBox.margin>
				</Button>
			</children>
		</HBox>
	</bottom>
   <left>
      <VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="0.0" minWidth="0.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="TOP_CENTER" disable="true" maxWidth="1.7976931348623157E308" text="Parameters" VBox.vgrow="ALWAYS" />
         </children>
         <BorderPane.margin>
            <Insets left="20.0" right="10.0" />
         </BorderPane.margin>
      </VBox>
   </left>
   <right>
      <VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="0.0" minWidth="0.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" text="Results" textAlignment="CENTER" VBox.vgrow="ALWAYS" />
            <HBox maxWidth="1.7976931348623157E308" minHeight="0.0" minWidth="0.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label text="Cost : " />
                  <Label fx:id="costLabel" text="costLabel" />
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets left="10.0" right="20.0" />
         </BorderPane.margin>
      </VBox>
   </right>
   <center>
		<AnchorPane fx:id="ChessboardPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="0.0" minWidth="0.0" BorderPane.alignment="CENTER" />
   </center>
</fx:root>
